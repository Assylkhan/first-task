<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
    <global>
        <constant>
            <constant-name>telephoneFormat</constant-name>
            <constant-value>^\d{5,10}$</constant-value>
        </constant>
    </global>
    <formset>
        <form name="newsForm">
            <field property="title" depends="required, maxlength">
                <msg name="required" key="errors.required"/>
                <msg name="maxlength" key="errors.maxlength"/>

                <arg name="maxlength" key="${var:minlength}" position="0" resource="false"/>
                <arg name="minlength" key="${var:minlength}" position="0" resource="false"/>

                <var>
                    <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>100</var-value>
                </var>

            </field>
            <field property="brief" depends="required,maxlength,minlength,mask">

                <msg name="required" key="errors.required"/>
                <msg name="maxlength" key="errors.maxlength"/>

                <arg name="required" key="${var:required}" position="0" resource="false"/>
                <arg name="maxlength" key="${var:maxlength}" position="1" resource="false"/>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>500</var-value>
                </var>

            </field>
            <field property="content" depends="required,maxlength,minlength">

                <msg name="required" key="errors.required"/>
                <msg name="maxlength" key="errors.maxlength"/>

                <arg name="maxlength" key="${var:maxlength}" position="0" resource="false"/>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>2048</var-value>
                </var>

            </field>
            <field property="date" depends="required,mask">

                <msg name="required" key="errors.required"/>
                <msg name="mask" key="news.date.error.invalid"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>^([0-9]{2}[\.]){2}[0-9]{4}$</var-value>
                </var>
            </field>

        </form>
    </formset>
</form-validation>
