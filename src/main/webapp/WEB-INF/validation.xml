<!--<?xml version="1.0" encoding="UTF-8" ?>-->
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
    <global>
        <constant>
            <constant-name>newsDate</constant-name>
            <constant-value>^([0-9]{2}[\.]){2}[0-9]{4}$</constant-value>
        </constant>
    </global>
    <formset>
        <form name="newsForm">
            <field property="title" depends="required">
                <arg name="required" key="news.title" position="0"/>
                <!--<msg name="maxlength" key="errors.maxlength"/>-->
                <arg name="maxlength" key="${var:maxlength}" position="0" resource="false"/>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>100</var-value>
                </var>

            </field>
            <field property="brief" depends="required,maxlength,mask">
                <arg name="required" key="news.brief" position="0"/>
                <msg name="maxlength" key="errors.maxlength"/>

                <arg name="maxlength" key="${var:maxLength}" position="0" resource="false"/>

                <var>
                    <var-name>maxLength</var-name>
                    <var-value>500</var-value>
                </var>

            </field>
            <field property="content" depends="required,maxlength">
                <msg name="maxlength" key="errors.maxlength"/>

                <arg name="maxlength" key="${var:maxLength}" position="0" resource="false"/>

                <var>
                    <var-name>maxLength</var-name>
                    <var-value>2048</var-value>
                </var>

                <arg name="required" key="news.title" position="0"/>
            </field>
            <field property="date" depends="required,mask">

                <!--<msg name="required" key="errors.required"/>
                <msg name="mask" key="news.date.error.invalid"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>newsDate</var-value>
                </var>-->
            </field>

        </form>
    </formset>
</form-validation>
